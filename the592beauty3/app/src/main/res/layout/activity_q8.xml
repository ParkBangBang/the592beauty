<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <ImageView
        android:src="@drawable/personalcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_q8_1" />

    <ImageView
        android:src="@drawable/q8"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_q8_2" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdgroup">

    <RadioButton
        android:text="Yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:id="@+id/radio_q8_1" />

    <RadioButton
        android:text="No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:id="@+id/radio_q8_2" />

    </RadioGroup>

    <ImageView
        android:src="@drawable/q8_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView_q8_3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.99" />

        <Button
            android:text="Nextâ–¶"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bNext"
            android:background="#00ff0000"
            android:layout_weight="0.01" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

    </LinearLayout>


</LinearLayout>