<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="#00ff0000"
            android:text="BACK" />

        <Button
            android:id="@+id/btn_Origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="5dp"
            android:text="Origin" />

        <Button
            android:id="@+id/btn_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#00ff0000"
            android:text="SAVE" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <SeekBar
        android:id="@+id/satBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="512"
        android:progress="256"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Eye"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text="  Eye  |" />

            <Button
                android:id="@+id/btn_Chin"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text="Chin    |" />

            <Button
                android:id="@+id/btn_Blemish"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text="Blemish    |" />

            <Button
                android:id="@+id/btn_Whitening"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text="Whitening    |" />

            <!--<Button-->
                <!--android:id="@+id/btn_Crop"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="#00ff0000"-->
                <!--android:text="Crop  |" />-->

            <Button
                android:id="@+id/btn_Rotation"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text="Rotation    |" />

            <Button
                android:id="@+id/btn_Inversion"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text=" Inversion    |" />

            <Button
                android:id="@+id/btn_Intensity"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text=" Intensity    |" />

            <android.support.v7.widget.AppCompatSeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/btn_Saturation"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text=" Saturation    |" />

            <Button
                android:id="@+id/btn_Sharpening"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text="Sharpening " />

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
