<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">


    <ImageView
        android:src="@drawable/personalcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_q1_1" />

    <ImageView
        android:src="@drawable/q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/imageView_q1_2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioG_q1">

            <RadioButton
                android:text="Yellow Base"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:id="@+id/radio_q1_1" />

            <RadioButton
                android:text="Pink Base"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:id="@+id/radio_q1_2"/>
        </RadioGroup>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/q1_yellow"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView_q1_3" />

            <ImageView
                android:src="@drawable/q1_pink"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView_q1_4"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:src="@drawable/q1_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/imageView_q1_5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.99" />

        <Button
            android:text="Nextâ–¶"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_q1"
            android:background="#00ff0000"
            android:layout_weight="0.01" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

    </LinearLayout>


</LinearLayout>