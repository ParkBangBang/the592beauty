<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.layla.practice2.MainActivity">

    <com.example.layla.practice2.CustomView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/customView"/>

    <TextView
        android:id="@+id/textView_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/customView"
        android:layout_margin="10dp"
        android:textSize="12pt" />

    <Button
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_eye"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="13dp"
        android:text="Button" />

    <Button
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/album"
        android:layout_marginEnd="59dp"
        android:layout_toStartOf="@+id/album"
        android:text="Button" />

</RelativeLayout>

